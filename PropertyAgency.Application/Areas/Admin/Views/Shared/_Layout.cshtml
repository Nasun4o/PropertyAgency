<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/adminPanel.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    
</head>
<body>

    <div class="nav-side-menu">
        <div class="brand">Admin Panel</div>
      
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
               
               
                    <li data-toggle="collapse" data-target="#products" class="collapsed active">
                        <a href="#"><i class="fa fa-users fa-lg"></i> New Clients <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="products">
                        <li>@Html.ActionLink("Add Landlord", "Add", "Landlord")</li>
                        <li>@Html.ActionLink("Add Tenant", "Add", "Tenant")</li>
                    </ul>

                    <li data-toggle="collapse" data-target="#service" class="collapsed">
                        <a href="#"><i class="fa fa-home fa-lg"></i> New Property <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="service">
                        <li>@Html.ActionLink("Add Property", "Add", "Property")</li>
                    </ul>

                   
                    @if (User.IsInRole("Admin"))
                    {
                        <li data-toggle="collapse" data-target="#employees" class="collapsed">
                            <a href="#"><i class="fa fa-users fa-lg"></i> Employees <span class="arrow"></span></a>
                        </li>
                    <ul class="sub-menu collapse" id="employees">
                        <li>@Html.ActionLink("New Employee", "Register", "Account", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Show Employees", "Index", "Employee", new { area = "Admin" }, null)</li>
                    </ul>
                    }
                    <li class="back"><i class="glyphicon glyphicon-arrow-left"></i>  @Html.ActionLink("Back", "Index", "Home", new { area = "" }, null)</li>
       
            </ul>
        </div>
    </div>

    <div id="footer" class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>