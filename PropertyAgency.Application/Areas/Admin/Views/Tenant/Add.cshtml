@model PropertyAgency.Models.BindingModels.TenantsBindingModel

@{
    ViewBag.Title = "Add Tenants";
}

<h2>Add New Tenant</h2>

@using (Html.BeginForm("Add", "Tenant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="control-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FullName" placeholder="FullName" name="FullName">
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <input type="text" class="form-control" id="PhoneNumber" placeholder="PhoneNumber" name="PhoneNumber">
        </div>
    </div>


    <div class="control-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <textarea id="Description" class="form-control" rows="10" cols="20" name="Description"></textarea>
        </div>
    </div>

    <div class="control-group">
        <!-- Button -->
        <div class="controls">
            <button class="btn btn-success" type="submit">Add Landlord</button>
        </div>
    </div>
}
