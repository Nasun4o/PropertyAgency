@model PropertyAgency.Models.BindingModels.TenantsBindingModel

@{
    ViewBag.Title = "Add Tenants";
}
<head>
    @Styles.Render("~/Content/propForm.css")
</head>


@using (Html.BeginForm("Add", "Tenant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    <h3 class="h3-label-form">Add New Tenant</h3>
    <div class="control-group">
        @Html.LabelFor(m => m.FullName, "Full Name", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "First Name and Last Name" })
        </div>
        @Html.ValidationMessageFor(model => model.FullName)
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.PhoneNumber, "Phone number", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone number" })
        </div>
        @Html.ValidationMessageFor(model => model.PhoneNumber)
    </div>


    <div class="control-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextArea("Description", null, 10, 20, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="control-group">
        <!-- Button -->
        <div class="controls">
            <button class="btn btn-success" type="submit">Add Landlord</button>
        </div>
    </div>
}
