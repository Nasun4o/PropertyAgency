@model PropertyAgency.Models.BindingModels.LandlordsBindingModel

@{
    ViewBag.Title = "Add Landlords";
}
<head>
@Styles.Render("~/Content/propForm.css")
</head>

<h2>Add New Landlord</h2>
@using (Html.BeginForm("Add", "Landlord", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
  
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="control-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>


    <div class="control-group">
        @Html.LabelFor(m => m.IsAcceptingAnimals, "Is Landlord accept Animals?", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <span>Yes</span>  @Html.RadioButton("IsAcceptingAnimals", "true", true)
            <span>No</span>  @Html.RadioButton("IsAcceptingAnimals", "false")
        </div>
    </div>

    <div class="control-group">
        <!-- Button -->
        <div class="controls">
            <button class="btn btn-success" type="submit">Add Landlord</button>
        </div>
    </div>
}
@*</form>*@

