@model PropertyAgency.Models.BindingModels.LandlordsBindingModel

@{
    ViewBag.Title = "Add Landlords";
}

@*<form class="form-horizontal" action='' method="POST">*@
<h2>Add New Landlord</h2>
@using (Html.BeginForm("Add", "Landlord", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
  
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="control-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FullName" placeholder="FullName" name="FullName">
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <input type="tel" class="form-control" id="PhoneNumber" placeholder="PhoneNumber" name="PhoneNumber">
        </div>
    </div>


    <div class="control-group">
        @Html.LabelFor(m => m.IsAcceptingAnimals, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <input type="radio" name="IsAcceptingAnimals" value="true" checked>Yes<br>
            <input type="radio" name="IsAcceptingAnimals" value="false">No
        </div>
    </div>

    <div class="control-group">
        <!-- Button -->
        <div class="controls">
            <button class="btn btn-success" type="submit">Add Landlord</button>
        </div>
    </div>
}
@*</form>*@

