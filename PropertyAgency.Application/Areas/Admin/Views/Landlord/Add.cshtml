@model PropertyAgency.Models.BindingModels.LandlordsBindingModel

@{
    ViewBag.Title = "Add Landlords";
}
<head>
@Styles.Render("~/Content/propForm.css")
</head>

@using (Html.BeginForm("Add", "Landlord", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
<h3 class="h3-label-form">Add New Landlord</h3>
    <div class="control-group">
        @Html.LabelFor(m => m.FullName, "Full Name", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
            @Html.ValidationMessageFor(model => model.FullName)
        </div>
    </div>
   
    <div class="control-group">
        @Html.LabelFor(m => m.PhoneNumber, "Phone Number", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
    </div>


    <div class="control-group">
        @Html.LabelFor(m => m.IsAcceptingAnimals, "Is Landlord accept Animals?", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <span>Yes</span>  @Html.RadioButton("IsAcceptingAnimals", "true", true)
            <span>No</span>  @Html.RadioButton("IsAcceptingAnimals", "false")
            @Html.ValidationMessageFor(model => model.IsAcceptingAnimals)
        </div>
    </div>

    <div class="control-group">
        <!-- Button -->
        <div class="controls">
            <button class="btn btn-success" type="submit">Add Landlord</button>
        </div>
    </div>
}
@*</form>*@

