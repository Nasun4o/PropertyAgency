@model PropertyAgency.Models.ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = "Login to Your Account";
}
<head>
    <link href="http://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css"/>
</head>

    <div class="modal-dialog">
        <div class="loginmodal-container">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>@ViewBag.Title.</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.UserName, "Username", new { @class = "col-md-2 control-label custome-label" })

                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control custome-input" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label custome-label" })

                @Html.PasswordFor(m => m.Password, new { @class = "form-control custome-input" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <input type="submit" value="Log in" class="btn btn-default custome-input" />
            }
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}