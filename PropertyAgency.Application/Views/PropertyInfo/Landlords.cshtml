@model PropertyAgency.Models.ViewModels.Landlord.LandlordsViewModel

@{
    ViewBag.Title = "Landlords";
}

<h2>Landlords</h2>

<div class="table table-bordered table-responsive table-striped">
    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Id</th>
            <th class="full-address">Име</th>
            <th class="apartment-size">Телефон</th>
            <th class="number-of-rooms">Животни?</th>
            <th class="number-of-rooms">Edit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var landlord in Model.Landlords)
        {
            <tr>
                <td class="number-of-rooms">&nbsp;@landlord.Id</td>
                <td>@landlord.FullName</td>
                <td class="full-address">&nbsp;@landlord.PhoneNumber</td>
                <td class="apartment-size">&nbsp;@landlord.IsAcceptingAnimals</td>
                <td>
                    <a href="../../EditLandlord/@landlord.Id">Edit</a> |
                    <a href="../../DeleteLandlord/@landlord.Id">Delete</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>


<div class="text-center pagination-margin-bot">


    @if (Model.Pager.EndPage > 1)
    {

        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li>
                    <a href="~/Properties/Show/Landlords">First</a>
                </li>
                <li>
                    <a href="~/Properties/Show/Landlords?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                    <a href="~/Properties/Show/Landlords?page=@page">@page</a>
                </li>    }

            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li>
                    <a href="~/Properties/Show/Landlords?page=@(Model.Pager.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="~/Properties/Show/Landlords?page=@(Model.Pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>