@model PropertyAgency.Models.ViewModels.Landlord.LandlordViewModel

@{
    ViewBag.Title = "EditLandlord";
}

<h2>Edit Landlord</h2>

<head>
    @Styles.Render("~/Content/propForm.css")
</head>
<li>
    @using (Html.BeginForm("EditLandlord", "Edit", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @Html.AntiForgeryToken()

        @*Address*@
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <input id="id" type="hidden" name="id" value="@Model.Id" />

        <div class="control-group">
            @Html.LabelFor(m => m.FullName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>
        </div>
        @*Size*@
        <div class="control-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.IsAcceptingAnimals, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <span>Yes</span>   @Html.RadioButtonFor(m => m.IsAcceptingAnimals, "true")
                <span>No</span>   @Html.RadioButtonFor(m => m.IsAcceptingAnimals, "false")
            </div>
        </div>


        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success" type="submit">Press To Edit</button>
            </div>
        </div>
    }
</li>