<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>


    <div class="nav-side-menu">
        <div class="brand">GuTie Managment</div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
                <li>
                  
                    <i class="fa fa-home fa-lg"></i>
                    @Html.ActionLink("Home", "Index", "Home")

                </li>
                @if (User.IsInRole("Moderator") || User.IsInRole("Broker") || User.IsInRole("Admin"))
                {
                <li data-toggle="collapse" data-target="#products" class="collapsed active">
                    <a href="#"><i class="fa fa-users fa-lg"></i> Clients <span class="arrow"></span></a>
                </li>
                


                <ul class="sub-menu collapse" id="products">
                    <li>@Html.ActionLink("Landlords", "Landlords", "PropertyInfo")</li>
                    <li>@Html.ActionLink("Tenants", "Tenants", "PropertyInfo")</li>
                    
                </ul>

                <li data-toggle="collapse" data-target="#service" class="collapsed">
                    <a href="#"><i class="fa fa-home fa-lg"></i> Properties <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="service">
                    <li>@Html.ActionLink("Rent", "Rent", "PropertyInfo")</li>
                    <li>@Html.ActionLink("Sale", "Sale", "PropertyInfo")</li>
                  

                </ul>

                    if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {
                      <li>
                           <i class="glyphicon glyphicon-wrench"></i>
                           @Html.ActionLink("Control Panel", "Index", "ControlPanel", new { area = "Admin" }, null)

                        </li>
                     }
                }
                <li data-toggle="collapse" data-target="#new" class="collapsed">
                    <a href="#">
                        <i class="fa fa-globe fa-lg"></i> About
                        <span class="arrow"></span>
                    </a>
                </li>
                <ul class="sub-menu collapse" id="new">
                    <li>@Html.ActionLink("Our Company", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>

           
                    @*TODO: SHOW ALL EMPLOEES Should be moved in the right place Admin Panel *@
                @*<li>
                    <a href="#">
                        <i class="fa fa-users fa-lg"></i> Users
                    </a>
                </li>*@
                @Html.Partial("_LoginPartial")
            </ul>
            
        </div>
    </div>

    <div id="footer" class="container body-content">
        @RenderBody()
  
        <footer>
            <p>&copy; @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


