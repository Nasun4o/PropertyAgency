@model PropertyAgency.Models.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<head>
    @Styles.Render("~/Content/registerForm.css")
</head>


<div class="col-md-10">
    <div class="col-md-3 login-form">
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>@ViewBag.Title.</h2>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control register-input", placeholder = "Employee Email Address." })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control register-input", placeholder = "Employee Username." })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control register-input", placeholder = "Employee Phone number." })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password,  new { @class = "form-control register-input", placeholder = "Employee Password"  })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control register-input", placeholder = "Employee Password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("User Role", new { @class = "col-md-2 control-label register-label" })
                    <div class="col-md-10 register-option">
                        @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, "Chose")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 register-submit">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
